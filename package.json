{
  "name": "radiodan-skeleton",
  "version": "0.0.0",
  "description": "An bare-bones Radiodan application",
  "main": "main.js",
  "scripts": {
    "start": "node_modules/.bin/nf start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "cd ./node_modules/espruino-tools && git submodule add https://github.com/espruino/EspruinoTools.git",
    "build": "browserify browser.js -o static/bundle.js",
    "watch": "watchify static/js/app.js -o static/js/bundle.js --debug --verbose",
    "watch-css": "watch 'css-combine static/css/app.css | autoprefixer -o static/css/bundle.css' static/css"
  },
  "author": "Andrew Nicolaou <andrew.nicolaou@bbc.co.uk>",
  "license": "Apache-2",
  "dependencies": {
    "radiodan": "git+https://github.com/radiodan/radiodan.js",
    "radiodan-client": "git+https://github.com/radiodan/radiodan-client.js.git",
    "foreman": "~1.2.0",
    "express": "~4.10.7",
    "es6-promise": "~2.0.1",
    "serialport": "~1.5.0",
    "lodash": "~3.2.0",
    "socket.io": "~1.3.4",
    "watch": "~0.14.0",
    "css-combine": "~0.1.8",
    "watchify": "~2.3.0",
    "browserify": "~8.1.3",
    "autoprefixer": "~5.1.0",
    "ractive": "~0.6.1"
  }
}
